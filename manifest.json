{
    "manifest_version": 2,
    "name": "Flus",
    "version": "0.4",
    "description": "Lâ€™extension officielle pour le service flus.fr",
    "homepage_url": "https://flus.fr",

    "browser_specific_settings": {
        "gecko": {
            "id": "{4f83b8ac-d692-44f8-9a5d-d018c9865bea}",
            "update_url": "https://flus.fr/addons/updates.json"
        }
    },

    "icons": {
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png"
    },

    "permissions": [
        "tabs",
        "webRequest",
        "https://app.flus.fr/*"
    ],

    "browser_action": {
        "default_icon": "icons/icon-32.png",
        "default_title": "Flus",
        "default_popup": "popup/index.html"
    },

    "background": {
        "page": "background/index.html"
    },

    "content_scripts": [
        {
            "matches": [
                "https://app.flus.fr/*"
            ],
            "js": ["content-script.js"]
        }
    ]
}
